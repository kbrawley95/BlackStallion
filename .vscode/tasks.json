{
    "version": "0.1.0",
    "showOutput": "always",
    "suppressTaskName": true,
    "windows": {
            "command": "cmd",
            "isShellCommand": true,
            "args": ["/C"],
            "showOutput": "always",
            "tasks": [
                {
                    "taskName": "Build",
                    "args": [
                        "mkdir Build & g++ -g -std=c++11 main.cpp -lopengl32 -lglew32 -lglew32mx -lglu32 -lmingw32 -lSDL2main -lSDL2 -lSDL2_image -lSDL2_ttf  -o Build/build"
                    ],
                    "isBuildCommand": true,
                    "suppressTaskName": true,
                    "problemMatcher": [
                        "$tsc",
                        "$lessCompile"
                    ]
                },
                {
                    "taskName": "Clean",
                    "args": [
                        "rmdir Build & mkdir Build"
                    ],
                    "suppressTaskName": true
                },
                {
                    "taskName": "Setup",
                    "suppressTaskName": true,
                    "args": [
                        "mkdir Build & robocopy Dependencies C:/MinGW/E & robocopy Dependencies/bin Build"
                    ]
                }
            ]
    },
    "linux": {
            "command": "sh",
            "isShellCommand": true,
            "args": ["-c"],
            "showOutput": "always",
            "tasks": [
                {
                    "taskName": "Build",
                    "args": [
                        "mkdir Build & g++ -std=c++11 main.cpp engine.cpp -lopengl32 -lglew32 -lglew32mx -lmingw32 -lSDL2main -lSDL2 -lSDL2_image -lSDL2_ttf  -o Build/build"
                    ],
                    "isBuildCommand": true,
                    "suppressTaskName": true,
                    "problemMatcher": [
                        "$tsc",
                        "$lessCompile"
                    ]
                },
                {
                    "taskName": "Clean",
                    "args": [
                        "rm -r Build & mkdir Build"
                    ],
                    "suppressTaskName": true
                },
                {
                    "taskName": "Setup",
                    "suppressTaskName": true,
                    "args": [
                        "mkdir Build & cp Dependencies C:/MinGW -e & cp Dependencies/bin Build"
                    ]
                }
            ]
    }
}